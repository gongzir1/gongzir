<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_news2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newsThumbnail"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            app:srcCompat="@drawable/news2" />

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CHINA" />

        <TextView
            android:id="@+id/newsDesc"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:gravity="center"
            android:text="A young boy has been charged over the alleged sexual assault and death of a 10-year-old girl in the United States. Warning: Distressing." />

        <TextView
            android:id="@+id/newsDesc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Related Stories" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

    </LinearLayout>

</FrameLayout>