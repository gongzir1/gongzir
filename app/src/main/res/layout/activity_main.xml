<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BtnCreateAlerts"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Create a New Advert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411" />

    <Button
        android:id="@+id/BtnShowAlerts"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Show All Lost&amp;Found Items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BtnCreateAlerts"
        app:layout_constraintStart_toStartOf="@+id/BtnCreateAlerts"
        app:layout_constraintTop_toBottomOf="@+id/BtnCreateAlerts"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/showMap"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="SHOW ON MAP"
        app:layout_constraintEnd_toEndOf="@+id/BtnShowAlerts"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BtnShowAlerts"
        app:layout_constraintTop_toBottomOf="@+id/BtnShowAlerts" />
</androidx.constraintlayout.widget.ConstraintLayout>